<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/download_progress_view_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="11dp"
            android:src="@drawable/icon_download_video" />

        <TextView
            android:id="@+id/tvDownloadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频下载中"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressViewBar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progressDrawable="@drawable/download_progress_drawable"
        android:layout_marginEnd="8dp" />
</LinearLayout>