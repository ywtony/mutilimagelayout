<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linerContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearDownloadTopBg"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:background="@drawable/download_progress_top_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在下载视频"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.yw.library.weight.downloadview.RoundProgressBar
            android:id="@+id/progress"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android_custom:max="100"
            android_custom:roundColor="@color/color_20C7"
            android_custom:roundProgressColor="@android:color/white"
            android_custom:roundWidth="2dp"
            android_custom:style="STROKE"
            android_custom:textColor="#FFFFFF"
            android_custom:textIsDisplayable="true"
            android_custom:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCancelDownload"
        android:layout_width="94dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:text="取消下载"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/download_progress_cancel_bg"
        android:textSize="14sp" />
</LinearLayout>