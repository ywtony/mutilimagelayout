<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--折叠View的styleable-->
    <declare-styleable name="app">
        <attr name="defaultChildWidth" format="integer" />
        <attr name="defaultChildHeight" format="integer" />
        <attr name="defaultChildMarginLeft" format="integer" />
        <attr name="defaultChildMarginRight" format="integer" />
        <attr name="defaultChildMarginTop" format="integer" />
        <attr name="defaultChildMarginBottom" format="integer" />
        <attr name="directionMode" format="integer" />
        <!--        以下是弧形属性测试-->
        <attr name="arcHeight" format="dimension" />
        <attr name="lgColor" format="color" />
        <attr name="bgColor" format="color" />
        <!--        滑块动画-->
        <attr name="sliderBg" format="color|reference" />
        <attr name="sliderChildBg" format="color|reference" />
        <attr name="sliderWidth" format="dimension" />
    </declare-styleable>
    <declare-styleable name="blur">
        <attr name="blurAlphaColor" format="reference|color" />
        <attr name="blurAlpha" format="integer" />
        <attr name="blurWidth" format="dimension" />
        <attr name="blurHeight" format="dimension" />
    </declare-styleable>
    <!--弧形的界面属性-->
    <!--    <declare-styleable name="ArcView">-->
    <!--        <attr name="arcHeight" format="dimension"/>-->
    <!--        <attr name="lgColor"   format="color"/>-->
    <!--        <attr name="bgColor" format="color"/>-->
    <!--    </declare-styleable>-->
    <declare-styleable name="roundedView">
        <attr name="rounded_radius" format="dimension" />
    </declare-styleable>
    <!--圆弧进度条-->
    <declare-styleable name="TasksCompletedView">
        <attr name="radius" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="ringColor" format="color" />
        <attr name="ringBgColor" format="color" />
    </declare-styleable>
    <!--    圆形进度条-->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>